DirectoryIndex index.html

RewriteEngine On

RewriteCond %{HTTP_HOST} !=savoirvivre.intraaktion.de
RewriteRule (.*) http://savoirvivre.intraaktion.de/$1 [R=301,L]

Redirect 301 /text/ /02_stage/
Redirect 301 /text/action_in_perception.html /text/01_action_in_perception.html
Redirect 302 /index.html /00_home/

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule (.*) /00_home/ [R=302]

#Prevent viewing of .htaccess file
<Files .htaccess>
order allow,deny
deny from all
</Files>

#Prevent directory listings
Options SymLinksIfOwnerMatch -Indexes

AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
